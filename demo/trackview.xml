<config>
    <application title="TrackView" style="css/themes/green.css" logo="img/logo/jdev.jpeg" exportpng="false" measuretools="false" mapprint="true"/>
    <mapoptions maxzoom="20" projection="EPSG:3857" center="-140491.257988154,6374714.394184201" zoom="4" />
    <searchparameters localities="false"
        features="true" 
        bbox="true" 
        querymaponclick="true" 
        banmarker="true" 
        inputlabel="Une recherche ?"
        closeafterclick="true"
        animate="true"
        duration="2000"
        />
    <olscompletion url="https://api-adresse.data.gouv.fr/search/"
        type="ban" 
        attribution="La recherche d'adresse est un service proposé par l'API adresse.data.gouv.fr"/>
    <baselayers style="default">
        <baselayer  type="WMTS" id="ortho" label="Photo aérienne IGN" title="GéoPortail" maxscale="1000" thumbgallery="img/basemap/ortho.jpg"
            url="https://data.geopf.fr/wmts" layers="ORTHOIMAGERY.ORTHOPHOTOS" format="image/jpeg" visible="false" fromcapacity="false"
            attribution="&lt;a href='https://geoservices.ign.fr/services-geoplateforme-diffusion' target='_blank'>&lt;img src='img/basemap/geoservices.png'>&lt;/a>" style="normal" matrixset="PM" maxzoom="22"/>
        <baselayer  type="OSM" id="osm1" label="OpenStreetMap" title="OpenSTreetMap" thumbgallery="img/basemap/osm.png" 
			url="http://{a-c}.tile.openstreetmap.org/{z}/{x}/{y}.png" 
			attribution="Données : les contributeurs d'&lt;a href='https://www.openstreetmap.org/' target='_blank'>OpenStreetMap &lt;/a>,  &lt;a href='https://www.openstreetmap.org/copyright' target='_blank'>ODbL &lt;/a>" visible="true"/>
    </baselayers>

    <themes mini="true">
        <theme id="theme-1" name="Les différents parcours" collapsed="false" icon="fas fa-book">
            <layer id="test" name="Couche sans group">
            </layer>
        </theme>
        <theme>
            <group>
                <layer id="test2" name="Couche avec group">
                </layer>
            </group>
        </theme>
    </themes>
</config>